$('a').each(function() {
	var a = new RegExp('/' + window.location.host + '/');
	var b = new RegExp('/.pdf/');
   if((!a.test(this.href))|(b.test(this.href))) {
       $(this).click(function(event) {
           event.preventDefault();
           event.stopPropagation();
           window.open(this.href, '_blank');
       });
