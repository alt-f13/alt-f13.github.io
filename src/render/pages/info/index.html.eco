<script src="/js/documents.js" charset="utf-8"></script>

<script type="text/ng-template"  id="tree_item_renderer.html">
    <a ng-href="{{data.href}}"  ng-if="data.href" class="link-icon">{{data.text}}</a>
    <div  ng-if="data.nodes" ng-init="listToggle[$index]=false" ng-click="listToggle[$index]!=listToggle[$index]">{{data.text}}
    <ul class="list-group"  ng-if="data.nodes" ng-show="listToggle[$index]">
        <li class="list-group-item"  ng-href="{{data.href}}"  ng-repeat="data in data.nodes" ng-include="'tree_item_renderer.html'"></li>
    </ul>
  </div>
  </ng-if>
</script>
<script type="text/ng-template"  id="accordionTree.html">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#{{$index}}" href="#">
            {{data.text}}
          </a>
        </h4>
      </div>
      <div id="{{$index}}" class="panel-collapse collapse in">
        <div class="list-group">
            <a class="list-group-item"  ng-href="{{data.href}}"  ng-repeat="data in data.nodes" ng-include="'tree_item_renderer.html'"></a>
        </div>
      </div>
</script>

